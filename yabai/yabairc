yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

defaults write com.apple.dock autohide-delay -float 9999; killall Dock
killall com.apple.dock.extra

yabai -m config layout bsp
yabai -m config window_placement second_child
yabai -m config window_origin_display focus
yabai -m config window_topmost on
yabai -m config window_shadow float
yabai -m config window_opacity on
yabai -m config window_border        on
yabai -m config window_border_blur   off
yabai -m config window_border_width  2
yabai -m config window_border_radius 10
yabai -m config active_window_border_color 0xFFf92778
yabai -m config normal_window_border_color 0xFF594C4B

yabai -m config top_padding    10
yabai -m config bottom_padding 10
yabai -m config left_padding   10
yabai -m config right_padding  10
yabai -m config window_gap     10

yabai -m config auto_balance   off

yabai -m config mouse_modifier fn
yabai -m config mouse_action1  resize
yabai -m config mouse_action2  move

yabai -m config focus_follows_mouse autoraise
yabai -m config mouse_follows_focus on

yabai -m rule --add app="^System Settings$" manage=off sticky=on
yabai -m config external_bar all:0:0
